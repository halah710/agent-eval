# AI Agent评测系统环境变量配置

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1  # 可选，自定义API端点
OPENAI_MODEL=gpt-4o-mini  # 默认模型

# Anthropic API配置
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# 本地模型配置（如果使用本地模型）
LOCAL_MODEL_PATH=./models/llama-7b
LOCAL_MODEL_DEVICE=cpu  # cpu 或 cuda

# 评测系统配置
EVAL_SEED=42  # 随机种子，确保可复现性
EVAL_MAX_TURNS=5  # 最大对话轮次
EVAL_TEMPERATURE=0.0  # LLM温度，0.0确保确定性输出

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/eval.log

# 输出配置
OUTPUT_DIR=./outputs
REPORT_FORMAT=json  # json 或 html